<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "https://www.joomla.org/xml/dtd/2.5/template-install.dtd">
<extension version="3.1" type="template" client="site">
	<name>Plantilla Rio Babel</name>
	<version>1.0</version>
	<creationDate>1/4/2021</creationDate>
	<author>RÃ­o Babel</author>
	<authorEmail>estudioriobabel@gmail.com</authorEmail>
	<copyright>Copyright (C) 2021.</copyright>
	<description>TPL_RIOBABEL_XML_DESCRIPTION</description>
	<files>
		<filename>component.php</filename>
		<filename>error.php</filename>
		<filename>offline.php</filename>
		<filename>favicon.ico</filename>
		<filename>index.php</filename>
		<filename>templateDetails.xml</filename>
		<filename>template_preview.png</filename>
		<filename>template_thumbnail.png</filename>
		<folder>styles</folder>
		<folder>html</folder>
		<folder>images</folder>
		<folder>img</folder>
		<folder>scripts</folder>
		<folder>language</folder>
		<folder>scss</folder>
	</files>
	<positions>
		<position>quick-info</position>
		<position>mainmenu</position>
		<position>slider-intro</position>
		<position>img-intro</position>
		<position>main-top</position>
		<position>menu-sticky</position>
		<position>submenu</position>
		<position>main-bottom</position>
		<position>breadckumb</position>
		<position>footer</position>
		<position>footer-cols</position>
		<position>legalmenu</position>
		<position>debug</position>
		<position>flying</position>
		<position>search</position>
		<position>hidden</position>
	</positions>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.tpl_riobabel.ini</language>
		<language tag="en-GB">en-GB/en-GB.tpl_riobabel.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="advanced">
				<field 
					name="templateColor" 
					type="color" 
					label="TPL_RIOBABEL_COLOR_LABEL"
					description="TPL_RIOBABEL_COLOR_DESC" 
					class="" 
					default="#08C"
				/>

				<field 
					name="templateBackgroundColor" 
					type="color" 
					label="TPL_RIOBABEL_BACKGROUND_COLOR_LABEL"
					description="TPL_RIOBABEL_BACKGROUND_COLOR_DESC" 
					class="" 
					default="#F4F6F7"
				/>

				<field 
					name="logoFile" 
					type="media" 
					label="TPL_RIOBABEL_LOGO_LABEL"
					description="TPL_RIOBABEL_LOGO_DESC" 
					class="" 
					default=""
				/>

				<field 
					name="sitetitle"  
					type="text" 
					label="JGLOBAL_TITLE"
					description="JFIELD_ALT_PAGE_TITLE_LABEL"
					default=""
					filter="string" 
				/>

				<field 
					name="sitedescription"  
					type="text" 
					label="JGLOBAL_DESCRIPTION"
					description="JGLOBAL_SUBHEADING_DESC"
					default=""
					filter="string" 
				/>

				<field 
					name="googleFont"
					type="radio"
					label="TPL_RIOBABEL_FONT_LABEL"
					description="TPL_RIOBABEL_FONT_DESC"
					class="btn-group btn-group-yesno"
					default="1"
					>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>

				<field 
					name="googleFontName" 
					type="text" 
					label="TPL_RIOBABEL_FONT_NAME_LABEL"
					description="TPL_RIOBABEL_FONT_NAME_DESC" 
					class="" 
					default="Open+Sans"
					showon="googleFont:1" 
				/>

				<field 
					name="fluidContainer"
					type="radio"
					label="TPL_RIOBABEL_FLUID_LABEL"
					description="TPL_RIOBABEL_FLUID_DESC"
					class="btn-group btn-group-yesno"
					default="0"
					>
					<option value="1">TPL_RIOBABEL_FLUID</option>
					<option value="0">TPL_RIOBABEL_STATIC</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
